<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <changeSet id="19-1" author="loith">
        <createTable tableName="addresses">
            <column name="id" type="uuid" defaultValueComputed="gen_random_uuid()">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="user_id" type="uuid">
                <constraints nullable="false"/>
            </column>

            <column name="name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>

            <column name="phone" type="varchar(20)">
                <constraints nullable="false"/>
            </column>

            <column name="street_address" type="varchar(255)">
                <constraints nullable="false"/>
            </column>

            <column name="city" type="varchar(120)"/>

            <column name="default_address" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="addresses"
                baseColumnNames="user_id"
                referencedTableName="users"
                referencedColumnNames="id"
                constraintName="fk_addresses_user"
                onDelete="CASCADE"/>
    </changeSet>

    <changeSet id="19-2" author="loith">
        <sql>
            CREATE UNIQUE INDEX IF NOT EXISTS uq_addresses_default_per_user
                ON addresses (user_id)
                WHERE default_address = true;
        </sql>
    </changeSet>
</databaseChangeLog>
