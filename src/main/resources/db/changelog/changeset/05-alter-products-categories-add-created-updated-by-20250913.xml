<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <changeSet id="5-1" author="loith">
        <addColumn tableName="products">
            <column name="created_by" type="uuid">
                <constraints
                             foreignKeyName="fk_products_created_by"
                             referencedTableName="users"
                             referencedColumnNames="id"/>
            </column>
            <column name="updated_by" type="uuid">
                <constraints
                             foreignKeyName="fk_products_updated_by"
                             referencedTableName="users"
                             referencedColumnNames="id"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="5-2" author="loith">
        <addColumn tableName="categories">
            <column name="created_by" type="uuid">
                <constraints
                             foreignKeyName="fk_categories_created_by"
                             referencedTableName="users"
                             referencedColumnNames="id"/>
            </column>
            <column name="updated_by" type="uuid">
                <constraints
                             foreignKeyName="fk_categories_updated_by"
                             referencedTableName="users"
                             referencedColumnNames="id"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>
