<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <changeSet id="13" author="loith">
        <createTable tableName="carts">
            <column name="id" type="uuid" defaultValueComputed="gen_random_uuid()">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="user_id" type="uuid">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="product_id" type="uuid">
                <constraints nullable="false"/>
            </column>

            <column name="quantity" type="int" defaultValueNumeric="1">
                <constraints nullable="false" checkConstraint="quantity >= 1"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="carts"
                baseColumnNames="user_id"
                referencedTableName="users"
                referencedColumnNames="id"
                onDelete="CASCADE"
                constraintName="fk_carts_user"/>

        <addForeignKeyConstraint
                baseTableName="carts"
                baseColumnNames="product_id"
                referencedTableName="products"
                referencedColumnNames="id"
                onDelete="CASCADE"
                constraintName="fk_carts_product"/>
    </changeSet>
</databaseChangeLog>
